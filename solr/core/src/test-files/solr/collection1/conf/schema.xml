   <dynamicField name="*_sI" type="string"  indexed="true"  stored="false"/>
   <dynamicField name="*_sS" type="string"  indexed="false" stored="true"/>
   <dynamicField name="t_*"  type="text"    indexed="true"  stored="true"/>
